---
import Navbar from "../components/Navbar.astro";
import logoFamag from "../assets/famag.webp";
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>Astro Basics</title>
	</head>
	<body class="container bg-gray-900 text-gray-200">
		<header class="flex justify-between items-center py-4">		
			<div class="flex items-center gap-3">
				<img src={logoFamag.src} width="48" height="48" alt="Famag logo" />
				<span class="text-4xl font-bold">FAMAG</span>
			</div>
			<Navbar />
		</header>
		<slot />
	</body>
</html>

<style>
	html,
	body {
		margin: 0;
		width: 100%;
		height: 100%;
	}
</style>
